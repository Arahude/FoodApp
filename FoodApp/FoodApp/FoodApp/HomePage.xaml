<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FoodApp.View.HomePage">
    <ContentPage.Content>
        <StackLayout Padding="10,200">
            <Label Text="Login" HorizontalTextAlignment="Center" FontSize="45" FontAttributes="Bold"/>
            <StackLayout VerticalOptions="Center" HorizontalOptions="Center">
                <Entry x:Name="usernameEntry" Placeholder="Username" />
                        <Entry x:Name="passwordEntry" Placeholder="Password" IsPassword="True" />
                        <Button Text="Login" Clicked="Button_Clicked"/>
                <Label FontSize="16" Padding="30,24,30,0">
                    <Label.FormattedText>
                        <FormattedString>
                            <FormattedString.Spans>
                                <Span Text="if you dont have an account "/>
                                <Span Text="Register" FontAttributes="Bold" TextColor="Blue"/>
                            </FormattedString.Spans>
                        </FormattedString>
                    </Label.FormattedText>
                </Label>
            </StackLayout>
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>